{
	"$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": false,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"semicolons": "asNeeded",
			"arrowParentheses": "always",
			"trailingCommas": "es5"
		}
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentWidth": 2,
			"indentStyle": "space"
		}
	},
	"assist": {
		"actions": {
			"source": {
				"useSortedProperties": "on"
			}
		}
	}
}

package link

import "strings"

type Props struct {
	Class string
	Href  string
	Style map[string]templ.SafeCSSProperty
	Attrs templ.Attributes
}

templ Link(p Props) {
	{{ isExternal := strings.HasPrefix(p.Href, "http") || strings.HasPrefix(p.Href, "https") }}
	<a
		class={ "link", p.Class }
		href={ templ.SafeURL(p.Href) }
		if len(p.Style) > 0 {
			style={ p.Style }
		}
		if isExternal {
			target="_blank"
			rel="noopener noreferrer"
		}
		{ p.Attrs... }
	>
		{ children... }
	</a>
}

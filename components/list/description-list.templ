package list

templ dd(text, id string) {
	<dd class="dd" id={ id }>
		{ text }
	</dd>
}

templ dt(isTabular bool) {
	<dt class={ "dt", templ.KV("dt--tabular", isTabular) }>
		{ children... }
	</dt>
}

templ Dl() {
	<dl class="description-list">
		{ children... }
	</dl>
}

type DlProps struct {
	ID        string
	Detail    string
	IsTabular bool
	IsColumn  bool
}

templ DlItem(props DlProps) {
	<div
		class="contents"
		if props.ID != "" {
			id={ props.ID }
		}
		if props.IsColumn {
			style="--style:column;--align:flex-start;--spacing:var(--spacing-1);"
		}
	>
		@dd(props.Detail, props.ID)
		@dt(props.IsTabular) {
			{ children... }
		}
	</div>
}
